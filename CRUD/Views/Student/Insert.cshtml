
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Insert</h2>
@using (Html.BeginForm("Insert", "Student"))
{
    <div class="form-group">
        <label for="email">Your Name:</label>
        <input type="text" class="form-control" id="name" name="yourName">
    </div>
    <div class="form-group">
        <label for="pwd">Your Surname:</label>
        <input type="text" class="form-control" id="surname" name="yourSurname">
    </div>
    <div class="form-group">
        <label for="pwd">Your Age:</label>
        <input type="text" class="form-control" id="age" name="yourAge">
    </div>
    <div class="form-group">
        <label for="pwd">Your Group:</label>
        <input type="text" class="form-control" id="group" name="yourGroup">
    </div>
    <button type="submit" class="btn btn-default">Send</button>
}

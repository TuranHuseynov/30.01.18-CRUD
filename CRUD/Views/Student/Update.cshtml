
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>
@using (Html.BeginForm("FillUPDATE","Student", new { id = ViewBag.id }))
{
    <div class="form-group">
        <label for="email">Your Name:</label>
        <input type="text" class="form-control" id="name" name="yourName" value="@ViewBag.data.Name">
    </div>
    <div class="form-group">
        <label for="pwd">Your Surname:</label>
        <input type="text" class="form-control" id="surname" name="yourSurname" value="@ViewBag.data.Surname">
    </div>
    <div class="form-group">
        <label for="pwd">Your Age:</label>
        <input type="text" class="form-control" id="age" name="yourAge" value="@ViewBag.data.Age">
    </div>
    <div class="form-group">
        <label for="pwd">Your Group:</label>
        <input type="text" class="form-control" id="group" name="yourGroup" value="@ViewBag.data.Group">
    </div>
    <button type="submit" class="btn btn-default">Send</button>
}


